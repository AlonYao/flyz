<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/apptheme">

    <TextView
        android:id="@+id/item_opencourse_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:text="@string/common_text"
        android:textSize="13sp"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

    <TextView
        android:id="@+id/item_opencourse_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_opencourse_desc"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="@string/common_text"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

    <ImageView
        android:id="@+id/item_opencourse_flag_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/item_opencourse_flag_left"
        android:layout_alignBottom="@id/item_opencourse_name"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/item_opencourse_flag_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/item_opencourse_flag_right"
        tools:ignore="ContentDescription,RtlHardcoded" />
</RelativeLayout>