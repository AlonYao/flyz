<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <RatingBar
        android:id="@+id/item_rate_rb"
        style="@style/custom_ratingbar_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="65dp"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/item_rate_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rate_rb"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:text="@string/common_text"
        android:textColor="@color/common_text"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/item_rate_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rate_username"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/common_text"
        android:text="@string/common_text"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />
    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_rate_avatar"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/login_avatar"
        android:scaleType="fitCenter"
        app:riv_border_width="1dp"
        app:riv_border_color="#979AA4"
        app:riv_oval="true"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/item_rate_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/common_text"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

</RelativeLayout>