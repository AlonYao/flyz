<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.offline.activity.OfflineActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/offline_button_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@color/apptheme"
        tools:ignore="DisableBaselineAlignment">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/offline_local_btn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="@string/offline_local"
                android:textColor="@android:color/white"
                tools:ignore="ContentDescription" />
            <View
                android:id="@+id/offline_local_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/offline_tab_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/offline_all_btn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="@string/offline_all"
                android:textColor="@color/offline_tab_unpress"
                tools:ignore="ContentDescription" />
            <View
                android:id="@+id/offline_all_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/offline_tab_line"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/offline_local_lv"
        style="@style/CommonListView"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/offline_button_ll"/>

    <ListView
        android:id="@+id/offline_all_lv"
        style="@style/CommonListView"
        android:visibility="gone"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/offline_button_ll"/>

    <TextView
        android:id="@+id/offline_none_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offline_button_ll"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="@string/offline_none"
        android:textColor="@color/common_text"/>

</RelativeLayout>
