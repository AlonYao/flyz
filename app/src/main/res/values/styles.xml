<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ToolBar -->
    <style name="CustomToolbar" parent="@style/ThemeOverlay.AppCompat">
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <!-- background of the  -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- ActivityTransparent -->
    <style name="ActivityTransparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/scratch_paper_bg</item>
        　　
        　　
        <item name="android:windowIsTranslucent">true</item>
        　　
        　　
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- 首页列表样式 -->
    <style name="HomePageListRL">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="HomePageListLL">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/homepage_item_bg</item>
    </style>

    <style name="HomePageListTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/homepage_todayexam</item>
    </style>

    <style name="HomePageAutoTestTv">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/homepage_todayexam</item>
        <item name="android:background">@drawable/homepage_item_bg</item>
    </style>

    <style name="HomePageListIV">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/homepage_item_bg</item>
    </style>

    <!-- 设置页面样式 -->
    <style name="SettingRL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/common_text</item>
    </style>

    <style name="SettingArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/setting_arrow</item>
    </style>

    <style name="SettingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:background">@color/common_line</item>
    </style>

    <style name="SettingCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:button">@drawable/setting_selector</item>
    </style>

    <!-- 通用ListView -->
    <style name="CommonListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- 做题页面 -->
    <style name="MeasureOptionLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MeasureOptionCb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="MeasureOptionTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:textColor">@drawable/measure_option_text_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/measure_option_bg_selector</item>
    </style>

    <!-- 练习报告页面 -->
    <style name="PracticeReportTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">全部解析</item>
    </style>

    <!-- 做题反馈Menu -->
    <style name="MeasureAnalysisFeedbackTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- 整卷练习 -->
    <style name="WholePagePopupMenuRl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WholePagePopupMenuTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="android:maxEms">4</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WholePagePopupMenuIv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/wholepage_arrowdown</item>
    </style>

    <!-- 能力评估 -->
    <style name="EvaluationListRl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="EvaluationListLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">31dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/evaluation_learningdays</item>
    </style>

    <style name="EvaluationListTitleTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="android:text">@string/evaluation_learningdays</item>
    </style>

    <style name="EvaluationListTitleTvSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="android:text">@string/evaluation_learningdays</item>
    </style>

    <style name="EvaluationListRightLl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EvaluationListCountTvBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">76dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">0</item>
    </style>

    <style name="EvaluationListUnitTvBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">36dp</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">单位</item>
    </style>

    <style name="EvaluationListCountTvSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">0</item>
    </style>

    <!-- 公开课 -->
    <style name="OpenCourseTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">@string/common_text</item>
        <item name="android:textColor">@color/common_text</item>
    </style>


</resources>
