<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".common.login.activity.MobileRegisterActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include layout="@layout/login_line"/>

        <!-- 手机号 -->
        <EditText
            android:id="@+id/mobile_register_num"
            style="@style/Login_EditText"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/login_black"
            android:hint="@string/login_mobile_register_num"/>

        <include layout="@layout/login_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            tools:ignore="RtlHardcoded" />

        <!-- 密码 -->
        <EditText
            android:id="@+id/mobile_register_pwd"
            style="@style/Login_EditText"
            android:inputType="textPassword"
            android:textColor="@color/login_black"
            android:hint="@string/login_edittext_password"/>
    </LinearLayout>

    <!-- 登录按钮 -->
    <Button
        android:id="@+id/mobile_register_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/login_next"
        android:textColor="@color/login_white"
        android:background="@color/login_green"
        android:layout_gravity="center_horizontal" />

    <include layout="@layout/app_logo"/>

</LinearLayout>
