<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.appublisher.quizbank.model.login.activity.EmailResetPwdActivity">

    <include layout="@layout/toolbar"/>

    <!-- 用户邮箱 -->
    <TextView
        android:id="@+id/emailreset_useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"/>

    <!-- 收不到邮件 -->
    <TextView
        android:id="@+id/emailreset_cannot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:text="@string/login_email_no_reply"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:ignore="RtlHardcoded" />

    <!-- 已重置，重新登录 -->
    <Button
        android:id="@+id/emailreset_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/login_relogin"
        android:textColor="@color/login_white"
        android:background="@color/blue"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
