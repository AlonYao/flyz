<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/promote_alert_img"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:scaleType="fitCenter"
            android:src="@drawable/measure_loading_img"
            tools:ignore="ContentDescription" />
        <ImageButton
            android:id="@+id/promote_alert_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/promote_alert_close"
            tools:ignore="ContentDescription,RtlHardcoded" />
    </RelativeLayout>

    <TextView
        android:id="@+id/promote_alert_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/promote_alert_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/promote_confirm"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@color/apptheme"/>

</LinearLayout>