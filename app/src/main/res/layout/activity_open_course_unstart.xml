<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appublisher.quizbank.activity.OpenCourseUnstartActivity">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/opencourse_img"
                android:layout_width="288dp"
                android:layout_height="172dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/opencourse_unstart"
                tools:ignore="ContentDescription" />

            <!-- course detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/opencourse_name"
                    style="@style/OpenCourseTv"/>

                <View
                    style="@style/SettingLine"/>

                <TextView
                    android:id="@+id/opencourse_time"
                    style="@style/OpenCourseTv"/>

                <View
                    style="@style/SettingLine"/>

                <TextView
                    android:id="@+id/opencourse_lector"
                    style="@style/OpenCourseTv"/>
            </LinearLayout>

            <!-- course notice -->
            <TextView
                android:id="@+id/opencourse_notice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@color/answer_sheet_btn"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="@string/opencourse_notice_false"/>

            <!-- 往期回顾 -->
            <LinearLayout
                android:id="@+id/opencourse_oldtimey_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/opencourse_passed_events"
                    tools:ignore="RtlHardcoded" />
                <com.appublisher.quizbank.customui.MultiListView
                    android:id="@+id/opencourse_oldtimey_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
