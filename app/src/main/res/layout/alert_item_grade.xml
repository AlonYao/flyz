<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_grade_bg"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/alert_grade_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/alert_grade_close"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/alert_grade_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:textColor="@color/setting_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/alert_grade"/>

        <TextView
            android:id="@+id/alert_grade_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/alert_grade_grade"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/alert_grade_grade"/>

        <TextView
            android:id="@+id/alert_grade_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/alert_grade_feedback"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/alert_grade_feedback"/>
    </LinearLayout>

</RelativeLayout>