<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.appublisher.quizbank.common.vip.activity.VipMSJPActivity">

    <include layout="@layout/toolbar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/vip_msjp_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        app:tabSelectedTextColor="@color/themecolor"
        app:tabIndicatorColor="@color/themecolor"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vip_msjp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vip_msjp_tablayout"/>

    <Button
        android:id="@+id/vip_msjp_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/vip_msjp_submit"
        android:textColor="@android:color/white"
        android:textSize="@dimen/vip_default_text"
        android:background="@color/vip_gray"/>

    <ImageView
        android:id="@+id/vip_msjp_totop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/vip_totop"
        tools:ignore="ContentDescription,RtlHardcoded" />

</RelativeLayout>
