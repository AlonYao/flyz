<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/comment_times"
            style="@style/CommonColorTextView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="1次"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/first_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/comment_times"
            android:text="首次尝鲜价，原价9元"
            android:textColor="@color/login_red"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/comment_times"
            android:background="@drawable/interview_comment_discount_bg_shape"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="9折"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/interview_comment_product_price_bg_shape"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/login_red"
            android:textSize="15sp"
            android:gravity="center"
            />
    </RelativeLayout>

</RelativeLayout>