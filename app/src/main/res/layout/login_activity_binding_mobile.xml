<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context="com.appublisher.dailyplan.model.login.activity.RegisterActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/bindingmobile_opencourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:text="@string/login_binding_mobile_opencourse"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:orientation="vertical">
        <include layout="@layout/login_line"/>
        <!-- 用户名 -->
        <EditText
            android:id="@+id/bindingmobile_phone"
            style="@style/Login_EditText"
            android:maxLength="11"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/login_black"
            android:hint="@string/login_binding_mobile"
            android:textColorHint="@color/login_gray"/>
    </LinearLayout>

    <!-- 下一步 -->
    <Button
        android:id="@+id/bindingmobile_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_next"
        android:textColor="@color/login_white"
        android:background="@color/login_green"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
