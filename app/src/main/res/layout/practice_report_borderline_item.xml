<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/item_borderline_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_centerVertical="true"
        android:ems="4"
        android:textColor="@color/setting_text"
        android:text="@string/practice_report_totalpoints"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:id="@+id/item_borderline_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_borderline_name"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"
        android:textColor="@color/setting_text"
        android:text="@string/common_none"
        tools:ignore="RtlHardcoded" />

    <!-- 分割线 -->
    <include layout="@layout/login_line"
        android:id="@+id/item_borderline_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_alignParentBottom="true"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>