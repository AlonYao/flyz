<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 课程中心Filter -->
    <LinearLayout
        android:id="@+id/course_filter"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <!-- 课程标签 -->
        <RelativeLayout
            android:id="@+id/course_tag_rl"
            style="@style/WholePagePopupMenuRl">

            <TextView
                android:id="@+id/course_tag_tv"
                style="@style/WholePagePopupMenuTv"
                android:text="@string/course_filter_tag"/>

            <ImageView
                android:id="@+id/course_tag_arrow"
                style="@style/WholePagePopupMenuIv"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/setting_line"/>

        <!-- 是否购买 -->
        <RelativeLayout
            android:id="@+id/course_purchase_rl"
            style="@style/WholePagePopupMenuRl">

            <TextView
                android:id="@+id/course_purchase_tv"
                style="@style/WholePagePopupMenuTv"
                android:text="@string/course_filter_purchase"/>

            <ImageView
                android:id="@+id/course_purchase_arrow"
                style="@style/WholePagePopupMenuIv"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/setting_line"/>

        <!-- 课程地区 -->
        <RelativeLayout
            android:id="@+id/course_area_rl"
            style="@style/WholePagePopupMenuRl">

            <TextView
                android:id="@+id/course_area_tv"
                style="@style/WholePagePopupMenuTv"
                android:text="@string/course_filter_area"/>

            <ImageView
                android:id="@+id/course_area_arrow"
                style="@style/WholePagePopupMenuIv"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:id="@+id/course_belowfilter_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/course_filter"
        android:background="@color/setting_line"/>

    <!-- 课程列表 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_belowfilter_line">
        <ListView
            android:id="@+id/course_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:clipToPadding="false"
            tools:ignore="RtlHardcoded" />
        <!-- 课程中心列表没有内容时显示的内容 -->
        <LinearLayout
            android:id="@+id/course_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="38dp"
                android:src="@drawable/course_null"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@color/setting_text"
                android:text="@string/course_null"/>
            <TextView
                android:id="@+id/course_qq"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:background="@drawable/course_qq_bg"
                android:text="@string/course_qq"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </RelativeLayout>


    <!-- Loading页面 -->
    <include layout="@layout/progressbar"/>

</RelativeLayout>