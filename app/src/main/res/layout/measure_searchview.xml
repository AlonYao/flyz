<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/measure_search"
    tools:ignore="RtlHardcoded">

    <ImageButton
        android:id="@+id/measure_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/measure_search_btn"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/measure_search_btn"
        android:layout_centerVertical="true"
        android:background="@drawable/measure_search_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <ImageView
            android:id="@+id/measure_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/measure_search_icon"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/measure_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/measure_search_clear"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <EditText
            android:id="@+id/measure_search_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/measure_search_icon"
            android:layout_toLeftOf="@id/measure_search_clear"
            android:hint="@string/measure_search_hint"
            android:textColorHint="@color/measure_search_hint"
            android:maxLines="1"
            android:maxLength="20"
            android:ellipsize="end"
            android:padding="5dp"
            android:background="@null"
            android:textColor="@color/measure_text"
            android:textSize="16sp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            tools:ignore="RtlHardcoded,TextFields" />
    </RelativeLayout>

</RelativeLayout>