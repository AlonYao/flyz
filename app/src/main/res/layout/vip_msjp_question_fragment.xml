<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">
            <!-- 说明 -->
            <TextView
                style="@style/Vip_Title"
                android:text="@string/vip_explain"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vip_explain_msjp"
                android:textColor="@color/vip_explain"
                android:textSize="@dimen/vip_default_text"
                android:padding="15dp"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/vip_gray"/>
            <!-- 问题 -->
            <WebView
                android:id="@+id/vip_msjp_question_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!-- 我的作业 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/Vip_Title"
                    android:text="@string/vip_myjob"/>
                <TextView
                    android:id="@+id/vip_msjp_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap,RtlHardcoded" />
            </RelativeLayout>

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/vip_msjp_myjob_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded,RtlSymmetry">
            </org.apmem.tools.layouts.FlowLayout>

            <!-- 教师评语 -->
            <ViewStub
                android:id="@+id/vip_msjp_review_viewstub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/vip_msjp_review_item"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/vip_msjp_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/vip_msjp_submit"
        android:textColor="@android:color/white"
        android:textSize="@dimen/vip_default_text"
        android:background="@color/vip_gray"/>

</RelativeLayout>