<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context="com.appublisher.dailyplan.model.login.activity.PwdChangeActivity">

    <include layout="@layout/toolbar"/>

    <EditText
        style="@style/Login_EditText"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:id="@+id/password_change_pre"
        android:hint="@string/userinfo_password_change_pre"/>

    <EditText
        style="@style/Login_EditText"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:id="@+id/password_change_new"
        android:hint="@string/userinfo_password_change_new"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_change_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/login_white"
        android:text="@string/login_setpwd_submit"
        android:background="@drawable/login_button_login"/>
</LinearLayout>
