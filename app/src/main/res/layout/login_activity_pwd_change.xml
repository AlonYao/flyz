<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context="com.appublisher.dailyplan.model.login.activity.PwdChangeActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_line"/>
        <EditText
            style="@style/Login_EditText"
            android:inputType="textPassword"
            android:id="@+id/password_change_pre"
            android:hint="@string/userinfo_password_change_pre"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_line"/>
        <EditText
            style="@style/Login_EditText"
            android:inputType="textPassword"
            android:id="@+id/password_change_new"
            android:hint="@string/userinfo_password_change_new"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_change_btn"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/login_white"
            android:text="@string/login_setpwd_submit"
            android:background="@color/login_green"/>
    </LinearLayout>

</LinearLayout>
